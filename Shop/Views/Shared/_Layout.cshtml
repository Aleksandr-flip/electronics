<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--We include the bootstrap file-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!--We include the css file-->
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header data-bs-theme="dark">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Electronic equipment assembly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <!--Registering links using TagHelper-->
                        <li class="nav-item">
                            <!--When a link is clicked, the Index method in the Home controller will be called-->
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Services/List">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Services/List/assembly">Assembly</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Services/List/software">Software</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ShopCart/">Cart</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>

    <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <p>Experience in the field of assembly and testing of electronic equipment for more than 2 years. © 2000 All rights reserved · <a href="#">Agreement</a></p>
        <span class="features-img">
            <picture>
                <source srcset="img/features/coin.svg" type="image/">
                <img src="img/features/coin.png" alt="">
            </picture>
        </span>
    </footer>
    <!--We include the js bootstrap file -->
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
